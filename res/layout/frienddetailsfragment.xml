<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/wallet_holo_blue_light">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:weightSum="4"
	    android:orientation="vertical" >
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.55"
	        android:background="@color/wallet_hint_foreground_holo_dark" >

	        
		    <ImageView
		        android:id="@+id/imgvfrienddetailsuserpic"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:src="@drawable/userboy1"
		        android:padding="3dp"
		        android:contentDescription="UserImage" />


		    <TextView
		        android:id="@+id/tvfrienddetailscontactno"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/imgvfrienddetailsuserpic"
		        android:textColor="@color/white"
		        android:padding="3dp"
		        android:textSize="15dp"
		        android:text="contactnumber" />

		    <TextView
		        android:id="@+id/tvfrienddetailsemailid"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/tvfrienddetailscontactno"
		        android:textColor="@color/white"
		        android:textSize="15dp"
		        android:padding="3dp"
		        android:text="EmailId" />

		    <TextView
		        android:id="@+id/tvfrienddetailsrelation"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/tvfrienddetailsname"
		        android:layout_below="@+id/tvfrienddetailsname"
		        android:textColor="@color/white"
		        android:paddingLeft="3dp"
		        android:text="Relation" />

		    <TextView
		        android:id="@+id/tvfrienddetailsname"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_marginTop="16dp"
		        android:layout_toRightOf="@+id/imgvfrienddetailsuserpic"
		        android:text="name"
		        android:textColor="@color/white"
		        android:paddingLeft="3dp"
		        android:textSize="35dp" />

		    <ImageButton
			    android:id="@+id/btnfriendsdetailslocationmanagement"
			    android:layout_width="180dp"
			    android:layout_height="50dp"
			    android:scaleType="fitCenter"
		        android:background="@null"
			    android:layout_below="@id/tvfrienddetailsemailid"
			    android:src="@drawable/frienddetaillocationmgtbutton" />
		    
		    <ImageButton
		        android:id="@+id/btnfriendsdetailsremoveuser"
		        android:layout_width="70dp"
		        android:layout_height="50dp"
		        android:scaleType="fitCenter"
		        android:background="@null"
		        android:layout_below="@id/tvfrienddetailsemailid"
		        android:layout_alignParentRight="true"
		        android:src="@drawable/frienddetailremovebutton"/>
                 
	    </RelativeLayout>
	         
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="2"
			android:layout_margin="5dp"
	        android:background="@color/white">
	         
			
	   
		    <TextView
		        android:id="@+id/lblfrienddetailssharinglocation"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="Location Sharing" />
		
		    <RadioGroup
		        android:id="@+id/rdgfrienddetailssharelocation"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/lblfrienddetailssharinglocation"
		        android:layout_marginLeft="14dp"
		        android:layout_marginTop="10dp"
		        android:orientation="vertical"
				>
		
		        <RadioButton
		            android:id="@+id/rdrdgfrienddetailslocationon"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:checked="true"
		            android:text="On" />
		
		        <RadioButton
		            android:id="@+id/rdrdgfrienddetailslocationoff"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            
		            android:text="Off" />
		
		       
		    </RadioGroup>
		    
			
		
			<Spinner
			    android:id="@+id/spfrienddetailsselectgroup"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			   
			    android:layout_below="@+id/rdgfrienddetailssharelocation" />

	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:layout_margin="5dp"
	        android:background="@color/white">

	        <ImageButton
	            android:id="@+id/btnfriendsdetailslocationmanagementapply"
	           android:layout_width="180dp"
	 	    android:layout_height="80dp"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	             android:background="@null"
	 	    	android:scaleType="fitCenter"
	 	    	android:src="@drawable/btnapply"/>
	        
	       

	    </RelativeLayout>
	</LinearLayout>
</ScrollView>