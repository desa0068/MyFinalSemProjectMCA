<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/wallet_holo_blue_light"
    android:orientation="vertical"
    android:weightSum="3.0" >

   <RelativeLayout
	    android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:padding="5dp"
	    android:background="@color/wallet_bright_foreground_holo_dark" >

         <Button
	        android:id="@+id/btngrouppopupclose"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:text="X" />

		<TextView
		    android:id="@+id/tvgrouppopuptitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/btngrouppopupclose"
		    android:text="Small Text"
		    android:textSize="20dp"
		    android:textAppearance="?android:attr/textAppearanceSmall" />
        
	</RelativeLayout>
    
    
    
    <RelativeLayout
	    android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_margin="5dp"
        android:padding="5dp"
	    android:background="@color/white" >
        
         <EditText
             android:id="@+id/etgrouppopuprenamegroup"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:hint="Enter new group name" >

	    </EditText>

        <ImageButton
            android:id="@+id/btngrouppopuprename"
            android:layout_width="180dp"
	 	    android:layout_height="80dp"
            android:layout_below="@+id/etgrouppopuprenamegroup"
            android:layout_centerHorizontal="true"
      		android:background="@null"
	 	    android:scaleType="fitCenter"
	 	    android:src="@drawable/btnrename"        />

	</RelativeLayout>
	    
	 <RelativeLayout
	    android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_margin="5dp"
        android:padding="5dp"
	    android:background="@color/white" >
	     
	     <ImageButton
	         android:id="@+id/btngrouppopupremovegroup"
	         android:layout_width="180dp"
	 	    android:layout_height="80dp"
	         android:layout_centerHorizontal="true"
	         android:background="@null"
	 	    android:scaleType="fitCenter"
	 	    android:src="@drawable/btnremove" />

	</RelativeLayout>
</LinearLayout>
