<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUserFragment" 
    android:background="@color/wallet_holo_blue_light">
    <LinearLayout  
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:weightSum="4"
	    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.55"
            android:background="@color/white"
            android:padding="15dp" >

            <TextView
                android:id="@+id/lbladduserselectcountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:text="Select Country" />

            <Spinner
                android:id="@+id/spinneraddusercountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lbladduserselectcountry" />

            <TextView
                android:id="@+id/lblentercontactno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/spinneraddusercountry"
                android:layout_marginTop="14dp"
                android:text="Enter Contact Number" />

            <EditText
                android:id="@+id/txtaddusercontactno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lblentercontactno"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </RelativeLayout>
				
				  <RelativeLayout
				      	android:id="@+id/rel2"
				        android:layout_width="match_parent"
	        		    android:layout_height="0dp"
				        android:layout_weight="2"
						android:layout_marginLeft="10dp"
            			android:layout_marginRight="10dp"
            			android:layout_marginTop="5dp"
            			android:layout_marginBottom="5dp"
				        android:layout_below="@id/rel1" 
				        android:padding="15dp"
				        android:background="@color/white"
							      >
				   <TextView
				        android:id="@+id/lblYourRelation"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentLeft="true"
				        android:layout_marginTop="14dp"
				        android:text="Select Your Relation" />
				    <Spinner
				        android:id="@+id/spinneryourrelation"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/lblYourRelation"
				         />
				
				    <TextView
				        android:id="@+id/lblreceiverrelation"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentLeft="true"
				        android:layout_below="@+id/spinneryourrelation"
				        android:text="Receiver Relation" />
				
				    <Spinner
				        android:id="@+id/spinnerreciverrelation"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_alignParentLeft="true"
				        android:layout_below="@+id/lblreceiverrelation" />
				
				 </RelativeLayout>
				 
				<RelativeLayout
				    	android:id="@+id/rel3"
						android:layout_width="match_parent"
				        android:layout_height="0dp"
				        android:layout_weight="1"
				        android:layout_marginLeft="10dp"
            			android:layout_marginRight="10dp"
            			android:layout_marginTop="5dp"
            			android:layout_marginBottom="5dp"
				        android:layout_below="@id/rel2" 
				        android:background="@color/white"
				        android:padding="15dp"
							    >

				    <ImageButton
				        android:id="@+id/btnaddusersendrequest"
				         android:layout_width="180dp"
	 	    			android:layout_height="80dp"
				        android:layout_centerHorizontal="true"
				        android:layout_centerVertical="true"
				        android:background="@null"
				        android:scaleType="fitCenter"
				        android:src="@drawable/btnsend" />
				   		    
				  </RelativeLayout>
    </LinearLayout>
</ScrollView>